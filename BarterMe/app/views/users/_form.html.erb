
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
  <h2 style="color:white">Enter User Details</h2>

  <div class="form-group" style="margin-bottom:20px">
    <%= f.label :email, 'Email:' %>
    <%= f.text_field :email, size: 40, class: 'form-control' %>
  </div>

   <div class="form-group" style="margin-bottom:20px">
    <%= f.label :user_name, 'Username:' %>
    <%= f.text_field :user_name, size: 40, class: 'form-control' %>
  </div>

  <div class="form-group" style="margin-bottom:20px">
    <%= f.label :password, 'Password:' %>
    <%= f.password_field :password, size: 40,class: 'form-control' %>
  </div>
  
  <div class="form-group" style="margin-bottom:20px">
    <%= f.label :password_confirmation, 'Confirm:' %>
    <%= f.password_field :password_confirmation, size: 40,class: 'form-control' %>
  </div>
  
  <% begin %>
  <% if admin? %>
    <div class = "field">
      <%= f.label :admin, 'Admin?:' %>
      <%= f.select(:admin, options_for_select([['Yes', true], ['No',false]], @user.admin)) %>
    </div>
  <% end %>
  <% rescue %>
  <% end %>
    </div>
  </div>
  <div class="btn btn-default">
    <%= f.submit %>
  </div>
</div>
<% end %>
