
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" style="text-shadow: 1px 1px black;">
      <h2><%= pluralize(@user.errors.count, "error") %>
        prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <div class="jumbotron" style="padding-top:1px; padding-left:10px; padding-right:10px;">
  <h2 style="color:white">Enter User Details</h2>

  <div class="form-group" style="margin-bottom:20px">
    <%= f.label :email, 'Email:' %>
    <%= f.text_field :email, size: 40, class: 'form-control' %>
  </div>

   <div class="form-group" style="margin-bottom:20px">
    <%= f.label :user_name, 'Username:' %>
    <%= f.text_field :user_name, size: 40, class: 'form-control' %>
  </div>

  <div class="form-group" style="margin-bottom:20px">
    <%= f.label :password, 'Password:' %>
    <%= f.password_field :password, size: 40,class: 'form-control' %>
  </div>
  
  <div class="form-group" style="margin-bottom:20px">
    <%= f.label :password_confirmation, 'Confirm:' %>
    <%= f.password_field :password_confirmation, size: 40,class: 'form-control' %>
  </div>
  
  <% begin %>
  <% if admin? %>
    <div class = "field">
      <%= f.label :admin, 'Admin?:' %>
      <%= f.select(:admin, options_for_select([['Yes', true], ['No',false]], @user.admin)) %>
    </div>
  <% end %>
  <% rescue %>
  <% end %>
  <%= f.submit "Submit", :class => 'myButton'%>
      </div>
    </div>
  </div>
</div>
  <% end %>

  <div class="col-md-6" style="padding-left:50px;  text-shadow: 1px 1px black;">
    <h2>Joining BarterMe</h2>
    <div class="jumbotron" style="padding-top:20px; padding-left:10px; padding-right:10px;">
    
    <p>
      Once you join BarterMe, you will have access to change your search preferences, post items for free, and trade your items with other users. Once you log-in, you will have access to our recommendation system, can I get it scoring system, and reliability indexes, all designed to make your trading easier and successful.  Signing-up is free and only takes a minute!  Enjoy!
    </p>
    </div>
  </div>
</div>  
