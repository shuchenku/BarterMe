 <%= stylesheet_link_tag "welcome" %>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class="row" style="padding-top:10px;">
      <div class="jumbotron" style="padding-top:10px; padding-left:10px; padding-right:10px;">
  <div class="container-fluid">
      <div class="col-md-3" style="padding-left:10px; padding-right:10px; text-shadow: 2px 2px black; ">
       <h2> TOP 5 LISTINGS</h2>
       <p><font size="5">
        <% @top_categories[0,5].each do |k, v| %>
        <%= link_to k, items_path(:query => k) %>
        <%= "(" + "#{v}" + ")" %><br>
        <% end %>
        <br> <%= link_to "All Categories", listings_path %>
      </font></p>
    </div>
    <div class="col-md-6" style="padding-left:10px; padding-right:10px; border-left: 1px solid #ccc; text-shadow: 2px 2px black;">

     <h2> RECOMMENDED FOR YOU</h2>
     <div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  
  <!-- Wrapper for slides -->

  <div class="container">
    <div class="carousel-inner" role="listbox">
      <div class="item active">
       <div class="container">
        <h3><%=@recommendations[0].name%></h3>
        <%= link_to image_tag(@recommendations[0].image_url), item_path(@recommendations[0]) %>
       </div>
     </div>
     <div class="item">
       <div class="container">
         <h3><%=@recommendations[1].name%></h3>
         <%= link_to image_tag(@recommendations[1].image_url), item_path(@recommendations[1]) %>
       </div>
     </div>
     
     <div class="item">
       <div class="container">
          <h3><%=@recommendations[2].name%></h3>
          <%= link_to image_tag(@recommendations[1].image_url), item_path(@recommendations[1]) %>
         </div>
       </div>
     </div>
   </div>

   <!-- Left and right controls -->
   <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
   </div>
   <div class="col-md-3" style="padding-left:10px; padding-right:10px; border-left: 1px solid #ccc; text-shadow: 2px 2px black;">
     <h2>Barter Spotlight</h2>

     <p><b>Check out what other users have been able to trade with our site:</b></p>
     <% if @recommended_barter != nil %>
     <p style="font-size:20px">Users:<br><a href=<%= "/profile/#{@recommended_barter[4]}" %>> <%= @recommended_barter[0] %></a> and <a href=<%= "/profile/#{@recommended_barter[5]}" %>> <%= @recommended_barter[1] %></a><br> were able to trade:<br><%= @recommended_barter[2] %> and  <%= @recommended_barter[3] %>! </p>
     <% end %>

     <%= link_to "Feeling Lucky?", item_path(Item.all.sample) %>
  </div>

</div>
</div>
</div>

